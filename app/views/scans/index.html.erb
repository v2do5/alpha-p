<h1>Listing scans</h1>

<table>
  <tr>
    <th>Keywords</th>
    <th>Category</th>
    <th>Minimum price</th>
    <th>Maximum price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scans.each do |scan| %>
  <tr>
    <td><%= scan.keywords %></td>
    <td><%= scan.category %></td>
    <td><%= scan.minimum_price %></td>
    <td><%= scan.maximum_price %></td>
    <td><%= link_to 'Show', scan %></td>
    <td><%= link_to 'Edit', edit_scan_path(scan) %></td>
    <td><%= link_to 'Destroy', scan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

